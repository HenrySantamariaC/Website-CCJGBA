---
import ResponsiveBlock from "../layouts/ResponsiveBlock.astro";

const dataGalery = [
  {
    icon: "ico-salud",
    title: "Tópico",
    description: "Ubicados junto a centros de salud y la cruz roja",
  },
  {
    icon: "ico-usuario",
    title: "Seguridad",
    description: "Personal capacitado para atenderlos y brindarles seguridad",
  },
  {
    icon: "ico-reciclaje",
    title: "Reciclaje",
    description: "Recipientes de reciclaje estratégicamente ubicados",
  },
  {
    icon: "ico-sshh",
    title: "SS.HH",
    description: "A su disposición para cualquier necesidad",
  },
  {
    icon: "ico-ambiental",
    title: "Entorno Natural",
    description: "Lugar fresco y naturista para recorrer en familia",
  },
  {
    icon: "ico-estacionamiento",
    title: "Estacionamiento",
    description: "Contamos con playa de estacionamiento",
  },
];
---

<ResponsiveBlock>
  <div class="pt-20 grid grid-cols-3 gap-3">
    {
      dataGalery.map((item) => (
        <div class="mx-auto p-5 w-10/12 flex flex-col gap-5 text-center text-secondary hover:shadow-xl cursor-pointer">
          <i class={`${item.icon} w-20 text-6xl mx-auto`} />
          <span class="text-2xl ">{item.title}</span>
          <p class="">{item.description}</p>
        </div>
      ))
    }
  </div>
</ResponsiveBlock>
